{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "WEConnect API",
    "description": "API to have access to weconnect actions"
  },
  "servers": [
    {
      "url": "http:localhost:8080/api/v1"
    }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Registers a new User",
        "requestBody": {
          "description": "user to add to the system",
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "phone": "type; string",
          "password": {
            "type": "string"
          }
        }
      }
    }
  }
}